<h3>Admin - Preferências</h3>

<%= link_to 'Nova Preferência', new_admin_preferencia_path %>

<table width="80%">
  <% for preferencia in @preferencias %>
	<tr>
    <td> <%= preferencia.nome    %></td> 
    <td><%= link_to 'Editar', edit_admin_preferencia_path(preferencia) %></td>
    <td><%= link_to 'X', [:admin,preferencia], confirm: 'Confirma a exclusão?', method: :delete %></td>
	</tr>
  <% end %>
</table>
