<h3>Admin - Nomes Populares</h3>


<table width="80%">


	<tr>
		<td>
			<%= form_tag admin_nomes_populares_path, :method => 'get' do %>
			  <p>
			    <%= text_field_tag :search, params[:search], :size => 45 %>
					<%= image_submit_tag("btn_search.png") %>
			  </p>
			<% end %>
		</td>
		<td align="right" >
			<%= link_to image_tag("btn_new.png", :alt => "New"), new_admin_nome_popular_path %>
		</td>
	</tr>

	<tr>
		<td><br></td>
	</tr>

	<tr>
		<td>NOME</td>	<td>EDIT</td> <td>DELETE</td>
	</tr>


  <% for nome_popular in @nomes_populares %>
	<tr>
      <td> <%=h nome_popular.nome %> </td>
      <td><%= link_to 'Editar', edit_admin_nome_popular_path(nome_popular) %></td>
      <td><%= link_to 'X', [:admin, nome_popular], confirm: 'Excluir?', method: :delete %></td>
	</tr>
  <% end %>
</table>
<%= will_paginate @nomes_populares %>