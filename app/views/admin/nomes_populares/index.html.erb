<h3>Admin - Nomes Populares</h3>

<%= link_to 'Novo Nome Popular', new_admin_nome_popular_path %>
</br></br>

<table width="80%">
  <% for nome_popular in @nomes_populares %>
	<tr>
      <td> <%=h nome_popular.nome %> </td>
      <td><%= link_to 'Editar', edit_admin_nome_popular_path(nome_popular) %></td>
      <td><%= link_to 'X', [:admin, nome_popular], confirm: 'Excluir?', method: :delete %></td>
	</tr>
  <% end %>
</table>
<%= will_paginate @nomes_populares %>