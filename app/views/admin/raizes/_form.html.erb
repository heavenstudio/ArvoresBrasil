<%= form_for([:admin, @raiz]) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

  <div>
    <%= f.label :nome %>
    <%= f.text_field :nome, :class => "text" %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao %>
  </div>

  <div>
    <%= submit_tag "Criar", :class => "send"  %>

  </div>
<% end %>