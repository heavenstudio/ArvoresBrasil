<% if object.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(object.errors.count, "erro") %>
	<%= pluralize(object.errors.count, "impede") %>
	 impendem que <%= object.class.to_s.underscore.humanize.downcase %> seja salva:
  </h2>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
</div>
<% end %>


